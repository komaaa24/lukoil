{
  "name": "lukoil",
  "version": "1.0.0",
  "description": "Telegram bot for engine-oil company with reminders and admin tools",
  "main": "dist/bot/index.js",
  "scripts": {
    "dev": "tsx watch src/bot/index.ts",
    "dev:worker": "tsx watch src/jobs/workers.ts",
    "dev:scheduler": "tsx watch src/jobs/schedulers.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/bot/index.js",
    "start:worker": "node dist/jobs/workers.js",
    "start:scheduler": "node dist/jobs/schedulers.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --max-warnings=0",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "migration:generate": "node --require ts-node/register ./node_modules/typeorm/cli.js migration:generate -d ./typeOrm.config.ts ./src/db/migrations/auto-migration",
    "migration:run": "node --require ts-node/register ./node_modules/typeorm/cli.js migration:run -d ./typeOrm.config.ts",
    "migration:revert": "node --require ts-node/register ./node_modules/typeorm/cli.js migration:revert -d ./typeOrm.config.ts",
    "migration:create": "node --require ts-node/register ./node_modules/typeorm/cli.js migration:create -d ./typeOrm.config.ts",
    "generate:link": "tsx src/utils/deeplink.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@grammyjs/storage-redis": "^2.5.1",
    "bullmq": "^5.66.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "grammy": "^1.39.3",
    "ioredis": "^5.9.2",
    "luxon": "^3.7.2",
    "pg": "^8.17.1",
    "pino": "^10.2.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.28",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/luxon": "^3.7.1",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^30.2.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.0",
    "sqlite3": "^5.1.7",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
